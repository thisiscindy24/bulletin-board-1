<div>
  <div>
    <h1>
      #<%= @the_board.name %>
    </h1>
    <hr>

    <h2>
    Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="title_field">Title</label>
        <input id="title_field" type = "text" name="query_title">
      </div>

      <div>
        <label for="body_field">Body</label>
        <textarea name="query_body" id="body_field" cols="30" rows="3"></textarea>
      </div>

      <div>
        <label for="expires_on_field">Expires on</label>
        <input id="expires_on_field" type = "date" name="query_expires_on">
      </div>

       <div>
        <label for="board_id_field">Board ID</label>
        <input id="board_id_field" type = "text" name="query_board_id">
      </div>

      <button>
        Add post
      </button>


    </form>

    <h2>Active Posts </h2>
    <% matching_posts = Post.where({:board_id => @the_board.id})%>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th>Expires on</th>
      </tr>

    <% matching_posts.each do |a_post|%>
     <tr>
        <td><%= a_post.title%></td>
        <td><%= a_post.body%></td>
        <td><%= a_post.created_at%>n</td>
        <td><%= a_post.expires_on%></td>
      </tr>
    <% end %>
    </table>

  
